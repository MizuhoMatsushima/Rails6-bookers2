<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book_id.user) do %>
            <%= image_tag @book_id.user.get_profile_image, size:"100x100" %><br>
            <%= @book_id.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book_id.title %></td>
          <td><%= @book_id.body %></td>
          <td>
            <% if @book_id.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book_id), class: "btn btn-sm btn-success edit_book_#{@book_id.id}" %>
            <% end %>
          </td>
          <td>
            <% if @book_id.user == current_user %>
             <%= link_to 'Destroy', @book_id, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book_id.id}"%>
            <% end %>
          </td>
          <td>

          </td>
          <td>
            コメント数：<%= @book_id.book_comments.count %>
          </td>
        </tr>
      </table>

      <div>
      <% @book_id.book_comments.each do |book_comment| %>
        <table>
          <tr>
            <td>
              <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
              <%= book_comment.user.name %>
            </td>
            <td><%= book_comment.comment %></td>
            <td>
              <% if book_comment.user == current_user %>
                <%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        </table>
      <% end %>
      </div>

      <div>
        <%= form_with model: [@book_id, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>



      <div>

      </div>
    </div>
  </div>
</div>